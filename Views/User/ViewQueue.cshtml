@model List<VirtualQueueSystem.Models.Order>

@{
    ViewData["Title"] = "Your Order Queue";
}

<div class="queue-container">
    <div class="queue-header">
        <h2>Your Order Queue</h2>
    </div>

    @if (Model.Any())
    {
        <div class="queue-box">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Queue Number</th>
                        <th>Status</th>
                        <th>Time Placed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.QueueNumber</td>
                            <td class="order-status">@order.Status</td>
                            <td>@order.CreatedAt.ToString("hh:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="queue-box">
            <p class="no-orders">
                <i class="fas fa-exclamation-triangle"></i> You have no active orders.
            </p>
        </div>
    }
</div>

<style>
    /* ✅ Main Container */
    .queue-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
        padding: 20px;
    }

    /* ✅ Title Header */
    .queue-header {
        background: #0056b3;
        color: white;
        padding: 15px 30px;
        border-radius: 12px;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        width: fit-content;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* ✅ Order Box */
    .queue-box {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        max-width: 700px;
        width: 100%;
        text-align: center;
        margin-top: 20px;
    }

    /* ✅ Table Styling */
    .table {
        width: 100%;
        margin-top: 10px;
        background: white;
    }

    .table th, .table td {
        padding: 12px;
        text-align: center;
        font-size: 16px;
    }

    .table thead {
        background-color: #007bff;
        color: white;
        border-radius: 10px;
    }

    /* ✅ No Orders Message */
    .no-orders {
        font-size: 18px;
        color: #666;
        font-weight: bold;
        padding: 15px;
    }
</style>
